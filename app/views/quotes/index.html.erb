<p id="notice"><%= notice %></p>

<h1>Quotes</h1>

<table class="pure-table pure-table-horizontal">
  <thead>
    <tr>
      <th>Customer</th>
      <th>Employee</th>
      <th>Car</th>
      <th>Wholesale Price</th>
      <th>Loan</th>
      <th>Multiplier</th>
      <th>Total Price</th>
      <th>Sold</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @quotes.each do |quote| %>
      <tr>
        <td><%= quote.customer.full_name %></td>
        <td><%= quote.user.full_name %></td>
        <td><%= quote.car.full_car %></td>
        <td><%= number_to_currency(quote.wholesaleprice) %></td>
        <td><%= quote.loan.full_name %></td>
        <td><%= number_to_percentage(quote.multiplier, precision: 2)%></td>
        <td><%= number_to_currency(quote.totalprice)%></td>
        <td><%= quote.sold_to_string %></td>
        <td>
          <div class="pure-menu pure-menu-horizontal">
            <ul class="pure-menu-list">
              <li class="pure-menu-item pure-menu-has-children pure-menu-allow-hover">
                <a href="#" id="menuLink1" class="pure-menu-link">Options</a>
                <ul class="pure-menu-children">
                  <li class="pure-menu-item"><%= link_to 'Show', quote %></li>
                  <% if can? :manage, Quote %>
                  <li class="pure-menu-item"><%= link_to 'Edit', edit_quote_path(quote) %></li>
                  <li class="pure-menu-item"><%= link_to 'Destroy', quote, method: :delete, data: { confirm: 'Are you sure?' } %></li>
                    <%end %>
                </ul>
              </li>
            </ul>
          </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Quote', new_quote_path %>

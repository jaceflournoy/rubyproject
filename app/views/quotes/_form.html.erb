<%= form_with(model: quote, local: true) do |form| %>
  <% if quote.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(quote.errors.count, "error") %> prohibited this quote from being saved:</h2>

      <ul>
      <% quote.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label "Customer " %>
    <%= form.collection_select :customer_id, Customer.all, :id, :full_name %>
  </div>

  <div class="field">
    <%= form.label "Employee " %>
    <%= form.collection_select :user_id, User.all, :id, :full_name %>
  </div>

  <div class="field">
    <%= form.label :car_id %>
    <%= form.collection_select :car_id, Car.all, :id, :full_car %>
  </div>

  <p>Wholesale Price: $ <span id="wholesaleprice"></span></p>

  <div class="field">
    <%= form.label "Loan " %>
    <%= form.collection_select :loan_id, Loan.all, :id, :full_name %>
  </div>

  <p>Mark-Up Value: 0.082</p>
  <p>Sales Tax: 0.043</p>
  <p>Total Price: <span id="totalprice"></span></p>

  <div class="field">
    <%= form.label :sold %>
    <%= form.check_box :sold %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>

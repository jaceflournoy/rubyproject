
<p id="notice"><%= notice %></p>

<h1>Cars</h1>
<% if false %>
  # Might add this back later if we can get it working
  <%= link_to "Advanced Search", new_search_path%>
<% end %>

<%= form_tag cars_path, :method => 'get' do %>
  <%= text_field_tag :search, params[:search] %>
  <%= submit_tag "Search" %>
<% end %>
<br/>

<table>
  <thead>
    <tr>
      <th>Image</th>
      <th>Vin</th>
      <th>Color</th>
      <th>Make</th>
      <th>Model</th>
      <th>Wholesale price</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @cars.each do |car| %>
      <tr>
        <% if false %>
          # Add this back if you have to remove it
          <td><%=image_tag(car.image, style: 'width:100px;height:100px;')%></td>
        <% end %>

        <td><%=image_tag(car.image, style: 'width:100px;height:100px;')%></td>
        <td><%= car.vin %></td>
        <td><%= car.color %></td>
        <td><%= car.make %></td>
        <td><%= car.model %></td>
        <td>$<%= car.wholesaleprice %></td>
        <td><%= link_to 'Show', car %></td>
        <td><%= link_to 'Edit', edit_car_path(car) %></td>
        <td><%= link_to 'Destroy', car, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%=will_paginate @cars %>

<br>

<%= link_to 'New Car', new_car_path %>
